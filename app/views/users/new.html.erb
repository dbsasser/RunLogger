<div class="card mx-auto text-center bg-dark text-white" style="max-width: 21rem;">
    <div class="card-header">
        Sign Up
    </div>
    <div class="card-body">
        <form method="POST" action ="/users">
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" class="form-control text-center" name="username" id="username">
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="text" class="form-control text-center" name="email" id="email">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control text-center" name="password" id="password">
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-success" value="Sign Up">
            </div>
            <small>Already have an account? <a href="/users/login">Log In</a></small>
        </form>
    </div>
</div>
