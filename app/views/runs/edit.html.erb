<h1>Add A Run</h1>

<form method="POST" action="/runs/<%= @run.id %>">
    <input id="hidden" type="hidden" name="_method" value="PATCH">
        <p>
        <label for="date">Date:</label><br>
        <label for="month">Month:</label>
        <input type="text" name="month" id="month" value="<%= Time.at(@run.date).strftime('%m') %>" size="2" maxlength="2">

        <label for="day">Day:</label>
        <input type="text" name="day" id="day" value="<%= Time.at(@run.date).strftime('%d') %>"size="2" maxlength="2">

        <label for="year">Year:</label>
        <input type="text" name="year" id="year" value="<%= Time.at(@run.date).strftime('%Y') %>" size="4" maxlength="4">
    </p>
    <p>
        <label for="minutes">Duration:</label>
        <label for="month">Hours:</label>
        <input type="text" name="hours" id="hours" value="<%= Time.at(@run.duration).utc.strftime("%H") %>" size="2" maxlength="2">

        <label for="minutes">Minutes:</label>
        <input type="text" name="minutes" id="minutes" value="<%= Time.at(@run.duration).utc.strftime("%M") %>"size="2" maxlength="2">

        <label for="seconds">Seconds:</label>
        <input type="text" name="seconds" id="seconds" value="<%= Time.at(@run.duration).utc.strftime("%S") %>" size="2" maxlength="2">
    </p>
    <p>
        <label for="distance">Distance:</label>
        <input type="text" name="distance" id="distance" value="<%= @run.distance %>"> Miles
    </p>
    <p>
        <label for="pace">Pace:</label>
        <select id="pace" name="pace" value="<%= @run.pace%>">
            <option value="Run">Run</option>
            <option value="Jog">Jog</option>
            <option value="Walk">Walk</option>
            <option value="Intervals">Intervals</option>
        </select>
    </p>
    <input type="submit" value="Confirm Changes">
</form>
